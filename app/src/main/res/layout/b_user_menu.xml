<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2247">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_movelo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:text="Bienvenido ..."
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:layout_margin="32dp"
        />

    <TextView
        android:id="@+id/where"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:text="¿A dónde te diriges hoy?"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:layout_margin="16dp"
        />

    <EditText
        android:id="@+id/origin"
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:fontFamily="sans-serif"
        android:hint="Origen"
        android:singleLine="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:backgroundTint="#0DE67E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/where"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/destination"
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:fontFamily="sans-serif"
        android:hint="Destino"
        android:singleLine="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:backgroundTint="#0DE67E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/origin"
        android:inputType="text"
        />
    <Button
        android:id="@+id/startRoute"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/border_button"
        android:text="Iniciar Ruta"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/destination" />




</androidx.constraintlayout.widget.ConstraintLayout>