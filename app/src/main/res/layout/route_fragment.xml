<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2247">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_movelo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:text="Encontramos la mejor ruta
        para ti"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:layout_margin="16dp"
        />


    <Button
        android:id="@+id/startRoute"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="64dp"
        android:background="@drawable/border_button"
        android:text="Ver ruta"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label"
        app:layout_constraintBottom_toTopOf="@id/end"/>

    <Button
        android:id="@+id/end"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="64dp"
        android:background="@drawable/border_button"
        android:text="Finalizar Recorrido"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startRoute" />




</androidx.constraintlayout.widget.ConstraintLayout>